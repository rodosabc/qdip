<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Портфолио</h2>
        <h3 class="section-subheading text-muted">Примеры нашей работы.</h3>
      </div>
    </div>
    <div class="row">
      <%i = 0%>
      <%@samples.each do |sample|%>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <a href="#portfolioModal<%=i%>" class="portfolio-link" data-toggle="modal">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              FUCK YOU
            </div>
          </div>
          <%=image_tag(sample.photo.url, :class => 'img-responsive')%>
        </a>
        <div class="portfolio-caption">
          <h4>Round Icons</h4>
          <p class="text-muted">Graphic Design</p>
        </div>
      </div>
          <%i = i + 1%>
      <%end%>
    </div>
  </div>
</section>
