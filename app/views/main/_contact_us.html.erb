<!-- Contact Section -->
<section id="contact_us">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Свяжитесь с нами</h2>
        <h3 class="section-subheading text-muted">Оставьте свой номер телефона, мы перезвоним вам и Вы сможете задать нам любые вопросы.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%=form_for @call, :html =>{ :id =>"contactForm", :name => "sentMessage", :remote => true} do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group phone-number">
              <%=f.phone_field :phone_number, class: 'form-control', placeholder: 'Ваш номер телефона *', id: 'phone_number', required: true, data_validation_required_message: "Пожалуйста, введите Ваш номер телефона."%>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="col-lg-12 text-center">
            <div id="success"></div>
            <%= button_tag 'Связаться с нами', :type => :submit, :class =>'btn btn-xl'%>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</section>